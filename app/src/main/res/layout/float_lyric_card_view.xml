<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:background="#00000000" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <LinearLayout
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:id="@+id/flcv_controll_bar"
        android:orientation="horizontal"
        android:gravity="center_vertical"
        android:background="@drawable/float_window_controll_bar"
        android:layout_width="match_parent"
        android:layout_height="35dp">
        <ImageButton
            android:id="@+id/flcv_edit"
            android:src="@drawable/ic_edit_off"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:layout_weight="1"
            android:scaleType="fitStart"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/flcv_nail"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_lock_off"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/flcv_resize"
            android:layout_marginRight="10dp"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_scale"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>

        <ImageButton
            android:id="@+id/flcv_move"
            android:background="@android:color/transparent"
            android:layout_marginRight="10dp"
            android:src="@drawable/ic_move"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
        <ImageButton
            android:id="@+id/flcv_close"
            android:background="@android:color/transparent"
            android:src="@drawable/ic_close"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"/>
    </LinearLayout>

    <ScrollView
        android:padding="20dp"
        android:background="@drawable/float_window_body"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">
        <EditText
            android:id="@+id/flcv_lyric"
            android:textColor="#333333"
            android:gravity="center"
            android:textSize="14sp"
            android:background="@android:color/transparent"
            android:lineHeight="25dp"
            android:text="I need somebody to heal\nSomebody to know\nSomebody to have\nSomebody to hold\n It's easy to say\n And it's never to same\n Guess I cannda..."
            android:layout_width="match_parent"
            android:layout_height="match_parent"/>
    </ScrollView>
</LinearLayout>